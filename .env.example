# HN New Configuration
# Copy to .env and fill in your values

# Cloudflare Browser Rendering API (required)
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token

# Basic Auth (optional - leave empty for no auth)
HN_USER=
HN_PASSWORD=

# Cloudflare timeout in ms (optional, default: 2000, max: 60000)
# Lower = cheaper but may miss slow-loading pages
# CF_BROWSER_TIMEOUT_MS=2000

# Story fetch interval in minutes (optional, default: 60)
# HN_FETCH_INTERVAL=60

# Content extraction workers (optional, default: 3)
# Multiple workers fetch from different domains in parallel
# Workers coordinate via shared rate limiters - safe to increase
# HN_CONTENT_WORKERS=3
